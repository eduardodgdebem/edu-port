---
import { Image } from "astro:assets";
import img from "../images/noiseBg.png";
---

<main class="rounded-lg overflow-hidden bg-gray-dark" id="main-home-page">
  <div class="relative h-[25rem]">
    <h1
      class="absolute z-20 font-black text-9xl text-vanila-bright outline-2 ml-10 top-[50%] translate-y-[-50%] max-sm:text-7xl max-sm:ml-5"
    >
      Eduardo<br /> de Bem
    </h1>
    <Image src={img} alt="background image" class="h-full min-w-fit" id="main-image" />
  </div>
</main>

<style>
  #main-image {
    transition: 3s;
    scale: 1.3;
    transform: translateX(-5rem);
  }

  #main-home-page:hover #main-image {
    scale: 1.7;
    transform: translateY(-7rem);
    transform: translateX(5rem);
    filter: blur(1px);
  }

</style>
